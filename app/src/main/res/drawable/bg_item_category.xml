<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_10dp" />
            <solid android:color="@color/color_selected_category" />
            <stroke android:width="1dp" android:color="@color/color_primary" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_10dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/cardview_shadow_start_color" />
        </shape>
    </item>
</selector>