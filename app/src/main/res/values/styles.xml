<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Button.Primary" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Button.Secondary" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.EditText.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_1</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_16dp</item>
        <item name="cursorColor">@color/color_1</item>
        <item name="hintTextColor">@color/color_1</item>
    </style>

    <style name="App.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@color/color_end_icon</item>
    </style>

    <style name="App.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_10dp</item>
    </style>

    <style name="App.CircleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>